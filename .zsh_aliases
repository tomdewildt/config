#! /bin/zsh
if [[ "$1" == true ]]; then
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'

alias alert='alerter --title "$( [ $? -eq 0 ] && echo Terminal || echo Error )" --message "${CMD%%; alert}" --sound default --timeout 5 < /dev/null > /dev/null 2>&1'
alias claude='claude --verbose'
