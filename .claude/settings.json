{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "alwaysThinkingEnabled": true,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "cleanupPeriodDays": 12,
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "env": {
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if command -v alerter >/dev/null 2>&1; then alerter --title 'Claude Code' --message 'Awaiting your input' --app-icon 'https://raw.githubusercontent.com/homarr-labs/dashboard-icons/refs/heads/main/png/claude-ai.png' --sound default > /dev/null 2>&1; elif command -v notify-send >/dev/null 2>&1; then notify-send 'Claude Code' 'Awaiting your input'; fi"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(cat *)",
      "Bash(cd *)",
      "Bash(cp *)",
      "Bash(docker *)",
      "Bash(find *)",
      "Bash(gh *)",
      "Bash(git *)",
      "Bash(go *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(jq *)",
      "Bash(ls *)",
      "Bash(make *)",
      "Bash(mv *)",
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(pwd)",
      "Bash(python *)",
      "Bash(sed *)",
      "Bash(tail *)",
      "Bash(uv *)",
      "Bash(wc *)",
      "Bash(which *)",
      "Read",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(chmod *)",
      "Bash(chown *)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(*.tfvars)"
    ],
    "ask": [
      "Bash(gh pr create *)",
      "Bash(gh pr merge *)",
      "Bash(git commit *)",
      "Bash(git push *)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  }
}
