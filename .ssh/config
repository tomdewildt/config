HashKnownHosts no

Host *
    IdentitiesOnly yes

Host github.com
    User git
    HostName github.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/github

Host master, master.lab.meijldoorn.nl
    HostName master.lab.meijldoorn.nl
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/master

Host worker-1, worker-1.lab.meijldoorn.nl
    HostName worker-1.lab.meijldoorn.nl
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/worker-1

Host worker-2, worker-2.lab.meijldoorn.nl
    HostName worker-2.lab.meijldoorn.nl
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/worker-2
